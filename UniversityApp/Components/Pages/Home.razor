@page "/"
@layout MainLayout
@using UniversityApp.Components.Layout

<h1 class="display-4 text-primary mb-4">University Dashboard</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm mb-4 border-start border-primary border-4">
            <div class="card-body">
                <h5 class="card-title">Total Students</h5>
                <p class="card-text fs-3 text-success">123</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm mb-4 border-start border-success border-4">
            <div class="card-body">
                <h5 class="card-title">Courses Offered</h5>
                <p class="card-text fs-3 text-info">12</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm mb-4 border-start border-warning border-4">
            <div class="card-body">
                <h5 class="card-title">Faculties</h5>
                <p class="card-text fs-3 text-warning">5</p>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-info mt-4">
    This is your admin panel. You can manage students, courses, and faculty from the navigation menu.
</div>
